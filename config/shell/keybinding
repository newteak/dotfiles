# default bindkey -s '^m' enter

# Function
pet-select() {
  BUFFER=$(pet search --query "$LBUFFER")
  CURSOR=$#BUFFER
  zle redisplay
}

# make terminal works like emacs's projectile.
projectile() {
  dir=$(find \
    ~/Documents \
    ~/Documents/study/ \
    ~/Documents/playground/ \
    -maxdepth 1 -mindepth 0 -type d | fzf) &&
  print -s cd "$dir" &&
  cd "$dir" &&
  ls
}

