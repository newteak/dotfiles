#!/bin/sh

CWD=`pwd`;

cd ${XDG_DOCUMENTS_DIR="$HOME/Documents"}/wiki-public; git pull &
cd ${XDG_DOCUMENTS_DIR="$HOME/Documents"}/org-public; git pull &
cd ${XDG_DOCUMENTS_DIR="$HOME/Documents"}/wiki-private; git pull &
cd ${XDG_DOCUMENTS_DIR="$HOME/Documents"}/org-private; git pull &
cd ${XDG_CONFIG_HOME:-$HOME/.config}/dotfiles; git pull &
cd ${XDG_DATA_HOME:-$HOME/.local/share}/snippets; git pull &
cd $CWD;

